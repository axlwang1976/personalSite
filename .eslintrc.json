{
    "extends": "airbnb-base",
    "env": {
        "browser": true
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "max-len": [
            "error",
            {
                "ignoreComments": true,
                "code": 800
            }
        ],
        "no-unused-expressions": [
            "error",
            {
                "allowTernary": true
            }
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "arrow-body-style": [
            "error",
            "as-needed"
        ],
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "prefer-destructuring": [
            "error",
            {
                "object": false,
                "array": false
            }
        ],
        "consistent-return": [
            "error",
            {
                "treatUndefinedAsUnspecified": false
            }
        ],
        "linebreak-style": 0,
        "eol-last": 0
    }
}